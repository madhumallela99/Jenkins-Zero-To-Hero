pipeline {
    agent any
tools {
  git 'Default'
  maven 'maven3.9.12'
 dockerTool 'docker'
}
}


    environment {
        AWS_REGION = "ap-south-1"
        ECR_REPO = "505342112116.dkr.ecr.ap-south-1.amazonaws.com/springboot-cicd"
    }

    stages {

        stage('Checkout') {
            steps {
            git branch: 'main', url: 'https://github.com/madhumallela99/Jenkins-Zero-To-Hero.git'
            }
        }

        stage('Build') {
            steps {
                     dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                sh 'mvn clean package -DskipTests'
              }
            }
        }

        stage('Docker Build') {
            steps {
                 dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                sh 'docker build -t springboot-app .'
              }
            }
        }

        stage('Login to ECR') {
            steps {
                sh '''
                aws ecr get-login-password --region $AWS_REGION \
                | docker login --username AWS --password-stdin $ECR_REPO
                '''
            }
        }

        stage('Push Image') {
            steps {
                sh '''
                docker tag springboot-app:latest $ECR_REPO:latest
                docker push $ECR_REPO:latest
                '''
            }
        }

        stage('Trigger CodePipeline') {
            steps {
                sh '''
                aws codepipeline start-pipeline-execution \
                --name DeployToEcsFargateService
                '''
            }
        }
    }
}
